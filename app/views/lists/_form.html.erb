<%= form_with(model: list, local: true, class: "form-color") do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <div class="field">
    <%= form.label :title, class: "mt-2" %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-no ml-1 mb-1" %>
  </div>

  <%= link_to 'Back', lists_path, class: "btn btn-no ml-1 mb-2" %>
<% end %>
</div>