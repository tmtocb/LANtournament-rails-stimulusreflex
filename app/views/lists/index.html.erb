<div class="card-header d-flex justify-content-between">
  <h5 class="m-0 text-dark">List</h5>
  <%= link_to 'New List', new_list_path, class: 'btn btn-sm' %>
</div>

<div class="card-body">
  <ul class="list-group">
    <% @lists.each do |list| %>
      <%= link_to list, class: 'text-decoration-none' do %>
        <li class="card-header d-flex justify-content-between">
          <div>
            <h6 class="m-0 text-dark">
              <b><%= list.title %></b>
              <span class="badge <%= list.badge_color %>"><%= list.status %></span>
            </h6>
            <p class="text-secondary m-0">
               <small><%= list.percent_complete %>% complete (<%= list.completed_items %> / <%= list.total_items %> items)</small>
            </p>
          </div>  
        </li>
      <% end %>
    <% end %>
  </ul>
</div>